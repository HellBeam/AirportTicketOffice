<Window x:Class="AirportOfficeTicket.WndHomeMen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirportOfficeTicket"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MinHeight="450" MinWidth="800">
    <Grid>
        <StackPanel>
            <Menu Height="20" VerticalAlignment="Top"
                  Background="LightSkyBlue">
                <MenuItem Header="Клиент">
                    <MenuItem Header="Зарегистрировать клиента"
                              Name="MiRegistr"
                              Click="MiRegistr_Click"/>
                </MenuItem>
                <MenuItem Header="Билеты">
                    <MenuItem Header="Забронировать билет"
                              Name="MiReserve"
                              Click="MiReserve_Click"/>
                </MenuItem>
                <MenuItem Header="Справка"
                          Name="MiHelp"
                          Click="MiHelp_Click"/>
            </Menu>
            <Frame Name="FrmHome"
                   NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
