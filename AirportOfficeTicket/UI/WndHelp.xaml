<Window x:Class="AirportOfficeTicket.WndHelp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirportOfficeTicket"
        mc:Ignorable="d"
        Title="Help" Height="250" Width="400"
        MinHeight="250" MinWidth="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Справка"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10"/>
            <TextBlock Text="Данное приложение предназначено для бронирования билетов в аэропорту и их просмотра клиентом в дальнейшем.                
                       Компания UtiAero в процессе разработки окончательной версии приложения и поэтому просим о всех замеченных багах сообщить на E-Mail: Help@utiaero.ru"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Height="130"
                       Width="300"/>
            <Button x:Name="BtnHideHelp"
                    Content="Закрыть"
                    Click="BtnHideHelp_Click"
                    />
        </StackPanel>
    </Grid>
</Window>
